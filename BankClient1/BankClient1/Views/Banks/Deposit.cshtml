
@{
    ViewBag.Title = "Deposit";
}

<div>@TempData["name"]</div>
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Nạp tiền
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Deposit", "Banks", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Số tiền</label>
                        <input type="number" class="form-control" id="amount" name="amount" placeholder="Vui lòng nhập số tiền muốn nạp">
                    </div>                
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Submit" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


