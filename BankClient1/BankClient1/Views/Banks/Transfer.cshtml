
@{
    ViewBag.Title = "Transfer";
}


<div>@TempData["name"]</div>
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Transfer", "Banks", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Số tài khoản người nhận</label>
                        <input type="text" class="form-control" id="receiverAccountNumber" name="receiverAccountNumber" placeholder="Vui lòng nhập mã tài khoản người nhận.">
                    </div>
                    <div class="form-group">
                        <label>Số tiền</label>
                        <input type="number" class="form-control" id="amount" name="amount" placeholder="Vui lòng nhập số tiền muốn chuyển">
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Chuyển tiền" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


